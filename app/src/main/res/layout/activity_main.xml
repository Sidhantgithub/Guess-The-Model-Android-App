        <ScrollView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="#EEEEEE">

                    <EditText
                        android:id="@+id/player_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#FFC107"
                        android:hint="Name"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="28dp"
                        android:paddingBottom="28dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            android:paddingBottom="16dp"
                            android:src="@drawable/e63"/>

                        <RadioGroup
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingLeft="40dp">
                            <RadioButton
                                android:id="@+id/merc_e63"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="E63"
                                android:paddingRight="100dp"
                                android:onClick="mercCheck"/>
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="E65"/>
                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="28dp"
                        android:paddingTop="28dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:paddingBottom="16dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/rs7" />

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="40dp">

                            <RadioButton
                                android:id="@+id/audi_rs7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:onClick="audiCheck"
                                android:paddingRight="100dp"
                                android:text="RS7" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="RS5" />
                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="28dp"
                        android:paddingBottom="28dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                           android:scaleType="centerCrop"
                            android:paddingBottom="16dp"
                            android:src="@drawable/bmw"/>

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="40dp">
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="M3"
                                android:paddingRight="100dp"/>
                            <RadioButton
                                android:id="@+id/bmw_m4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="M4"
                                android:onClick="bmwCheck"/>
                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="28dp"
                        android:paddingBottom="28dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            android:paddingBottom="16dp"
                            android:src="@drawable/jag"/>

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="40dp">
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="XF"
                                android:paddingRight="100dp"/>
                            <RadioButton
                                android:id="@+id/jag_xfr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="XFR"
                                android:onClick="jagCheck"/>
                        </RadioGroup>
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="28dp">
                    <CheckBox
                        android:id="@+id/submit_or_not"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:text="Submit"
                        android:textSize="20sp"
                        android:textAllCaps="true"/>
                </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="28dp">
                        <Button
                        android:id="@+id/answer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="check"
                        android:onClick="isSubmitCheckBoxClicked"
                        android:layout_alignParentLeft="true" />
                        <Button
                            android:id="@+id/reset"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RESET"
                            android:layout_alignParentRight="true"
                            android:onClick="resetEverything"/>
                    </RelativeLayout>


                </LinearLayout>
            </ScrollView>